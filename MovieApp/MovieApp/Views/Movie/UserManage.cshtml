@model ICollection<MovieApp.Models.ApplicationUser>
@{
    ViewBag.Title = "Manage Users";
}

<span style="color:green; font-size:24px">@TempData["Success"]</span>
<span style="color:red; font-size:24px">@TempData["Error"]</span> 

<link href="@Url.Content("~/Styles/Manage.css")" rel="stylesheet" type="text/css" />

<h2>Manage Users</h2>
<table>
    <thead>
        <tr><th><button onclick="OpenDialog('/Movie/UserCreate')">Add</button></th><th>Username</th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><input type="button" value="Edit" onclick="OpenDialog('/Movie/UserEdit?userId=@user.Id.ToString()')" /></td>
                <td>@user.UserName</td>
            </tr>
        }
    </tbody>
</table>

<div id='dialog' class='modal'>
    <div id="dialogcontent">
    </div>
</div>

<script src="@Url.Content("~/Scripts/Movie.js")" type="text/javascript"></script>

<style>
    .modal {
        padding-left: 20px;
        border: 1px solid black;
        background-color: white;
        position: fixed;
        left: 60%;
        margin-left: -200px;
        height: 270px;
        top: 15%;
        width: 500px;
        overflow: hidden;
    }
</style>